package onlineBanking;

import java.util.ArrayList;

public class binarySearch {

	public static ArrayList<Integer> sort(ArrayList<Integer> list) {
		
		for (int a = 0; a < list.size(); a++) {
			
			int min = Integer.MAX_VALUE, change = 0;
			
			//sets the lowest value integer to min
			for (int b = a; b < list.size(); b++)
				if (list.get(b) < min) {
					min = list.get(b);
					change = b;
				}
			
			//swap
			int temp = list.get(change);
			list.set(change, list.get(a));
			list.set(a, temp);
			
		}
		
		return list;
	}
	
	public static int binarySearch(ArrayList<Integer> list, int target, int min, int max) {
		
		int mid = (max + min) / 2;
		
		if (mid == max && mid == min)
			return -1;
		
		int temp = list.get(mid);
		
		if (target == temp)
			return mid;
		else if (target < temp)
			return binarySearch(list, target, min, mid);
		else if (target > temp)
			return binarySearch(list, target, mid, max);
		return -1;
		
	}
	
	public static void main(String[] args) {
		
		ArrayList<Integer> list = new ArrayList<Integer>();
		
		list.add(76); list.add(12); list.add(789); list.add(385); list.add(70); list.add(1); list.add(98); list.add(356); list.add(67); list.add(6789); 
		
		System.out.println(sort(list));
		
		System.out.println(binarySearch(list, 285, 0, list.size()));
		
	}

}
